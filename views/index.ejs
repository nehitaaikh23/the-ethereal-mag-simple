<%- include("partials/header.ejs") %>

<div class="intro-hero">
    <h2 class="intro-hero-head">Fashion, Music and Culture</h1>
    <p class="intro-hero-text">Made of Africans, for Africans by Africans...</p>
</div>

<img src="images/tems-img.jpg" alt="" class="top-img" height="350">



<section class="post-sect">
    <h2 class="post-sect-head">Latest Posts</h2><hr>
    <% if (locals.title){ %>
        <ul class="post-ul">
            <li class="post-title"><a href="/"><%= title %></a></li>
            <li class="post-date"><%= new Date().getFullYear(); %></li>
        </ul>
        
    <% } else { %>
        <p>No posts yet.</p>
    <% } %>
</section>

<form action="/post" method="post">
    <label for="blog-title">Title</label>
    <input type="text" placeholder="Title" name="blog-titles" required>
    <label for="blog-post">Content</label>
    <input type="text" placeholder="Content" name="blog-post">
    <input type="submit" value="Post" class="butn">
</form>

